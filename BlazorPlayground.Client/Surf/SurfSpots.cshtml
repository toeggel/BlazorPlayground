@page "/surfspots"
@inherits SurfSpotsComponent

<h1>Surf spots</h1>

@if (SurfSpots == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <div class="surfspots-container">
        @foreach (var surfSpot in SurfSpots)
        {
            <div class="card">

                <div class="card-content">
                    <span class="card-title activator">
                        @surfSpot.Name<i class="material-icons right">more_vert</i>
                    </span>
                    <div class="row">
                        <label class="col s3">Break:</label><span class="col s9">@surfSpot.BreakType</span>
                    </div>
                    <div class="row">
                        <label class="col s3">Wave:</label><span class="col s9">@surfSpot.WaveType</span>
                    </div>
                    <div class="row">
                        <label class="col s3">Tide:</label><span class="col s9">@surfSpot.BestTide</span>
                    </div>
                </div>
                <div class="card-action">
                    <a href="surfspots/@surfSpot.Id">Edit</a>
                    <a href="#">Delete</a>
                </div>
                <div class="card-reveal">
                    <span class="card-title">Card Title<i class="material-icons right">close</i></span>
                    <p>@surfSpot.Description</p>
                </div>
            </div>
        }
    </div>
}